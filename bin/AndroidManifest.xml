<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.gvisions.oweapp"
    android:versionCode="35"
    android:versionName="2.9" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
        <uses-permission android:name="android.permission.CAMERA"/>
    -->
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ExtendedHoloLightTheme" >
        <activity
            android:name="de.gvisions.oweapp.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="de.gvisions.oweapp.NewItem" >
        </activity>
        <activity android:name="de.gvisions.oweapp.ShowItem" >
        </activity>
        <activity android:name="de.gvisions.oweapp.PreferenceScreen" >
        </activity>
        <activity android:name="de.gvisions.oweapp.ListActivity" >
        </activity>
        <activity android:name="de.gvisions.oweapp.FragmentActivity" >
        </activity>
        <activity android:name="de.gvisions.oweapp.EditItem" >
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity android:name="de.gvisions.oweapp.WebView" >
        </activity>
        <activity
            android:name="de.gvisions.oweapp.LoginView"
            android:label="@string/title_activity_login_view"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
    </application>

</manifest>